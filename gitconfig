[color]
   ui = auto
[color "branch"]
   current = yellow reverse
   local = yellow
   remote = green
[color "diff"]
   meta = yellow bold dim
   frag = magenta bold
   old = red bold
   new = green bold dim
[color "status"]
   added = yellow
   changed = green
   untracked = cyan

[alias]
   co = checkout
   br = branch
   ci = commit
   st = status -sb
   unstage = reset HEAD --
   l = log --decorate --stat --graph --pretty=format:'%C(yellow)%h%Creset (%ar - %Cred%an%Creset), %s%C(blue)%d%Creset%n'
  outgoing = log @{u}.. --oneline
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
